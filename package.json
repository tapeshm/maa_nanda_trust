{
  "name": "temple-trust",
  "version": "1.0.0",
  "description": "Temple Trust website running on Cloudflare Workers using Hono, D1, R2 and KV.",
  "type": "module",
  "scripts": {
    "dev": "pnpm run build:client && concurrently --kill-others-on-fail 'pnpm:watch:css' 'pnpm:watch:js' 'pnpm:dev:resilient'",
    "watch:css": "pnpm exec tailwindcss -i ./src/styles/input.css -o ./dist/client/assets/app.css --watch",
    "watch:js": "vite build --watch",
    "build:client": "vite build",
    "build:worker": "wrangler deploy --dry-run",
    "build": "pnpm run build:client && pnpm run build:worker",
    "dev:wrangler": "wrangler dev --ip 0.0.0.0 --port 8787 --local-protocol=https",
    "dev:resilient": "nodemon --config nodemon.json --watch dist/client/.vite/manifest.json --exec sh -c 'wrangler dev --ip 0.0.0.0 --port 8787 --local-protocol=https || true'",
    "postinstall": "node scripts/prepare-assets.mjs",
    "generate-types": "wrangler types",
    "type-check": "pnpm run generate-types && tsc",
    "deploy": "wrangler deploy",
    "migrate": "wrangler d1 migrations apply DB --local",
    "add:users": "node scripts/add-users.mjs",
    "test": "pnpm run build:client && vitest",
    "lint": "eslint src/frontend/editor src/frontend/ui.ts src/utils/assets.ts src/templates/layout.tsx tests/frontend/editor tests/utils/assets.test.ts --ext .ts,.tsx,.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@hono/zod-validator": "",
    "@supabase/ssr": "",
    "@supabase/supabase-js": "",
    "@tailwindplus/elements": "",
    "@tiptap/core": "^3.4.4",
    "@tiptap/extension-image": "^3.4.4",
    "@tiptap/extension-placeholder": "^3.4.4",
    "@tiptap/html": "^3.4.4",
    "@tiptap/pm": "^3.4.4",
    "@tiptap/starter-kit": "^3.4.4",
    "bcryptjs": "",
    "hono": "^4.9.0",
    "htmx.org": "",
    "jose": "",
    "zod": ""
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.8.66",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/cli": "",
    "@tailwindcss/typography": "",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chai": "^6.0.1",
    "concurrently": "",
    "dotenv": "",
    "eslint": "^9.36.0",
    "magic-string": "^0.30.19",
    "nodemon": "",
    "prettier": "^3.6.2",
    "tailwindcss": "",
    "typescript": "",
    "vite": "",
    "vitest": "",
    "wrangler": ""
  }
}
